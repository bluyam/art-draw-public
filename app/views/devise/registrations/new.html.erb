<style>
@media (max-width: 768px) {
.center-box {
  margin: 50px auto;
  background-color: #ffffff;
  padding: 30px;
}
}

@media (min-width: 768px) {
  .center-box {
  margin: 50px auto;
  width: 400px;
  background-color: #ffffff;
  padding: 30px;
}
}

h2 {
  font-size: 35px;
  text-align: center;
}

a {
  text-align: center;
}

input {
  border-bottom: 1px solid #cfd2d5;
}

input[type=submit] {
  margin-top: 10px;
}

</style>

<div class="login-box center-box">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.text_field :username, placeholder: "Username" %></p>
  </div>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password (6 characters minimum)", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,  placeholder: "Confirm Password",autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

