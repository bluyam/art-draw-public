<style>
@media (max-width: 768px) {
.center-box {
  margin: 50px auto;
  background-color: #ffffff;
  padding: 30px;
}
}

@media (min-width: 768px) {
  .center-box {
  margin: 50px auto;
  width: 400px;
  background-color: #ffffff;
  padding: 30px;
}
}

h2 {
  font-size: 35px;
  text-align: center;
}

a {
  text-align: center;
}

input {
  border-bottom: 1px solid #cfd2d5;
}

input[type=submit] {
  margin-top: 10px;
}

</style>
<div class="login-box center-box">
<h2>Sign in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%=f.text_field :login, placeholder: "Username" %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>