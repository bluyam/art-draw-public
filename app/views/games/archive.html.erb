<style>
  @media (max-width: 768px) {
    
    .item {
      height: 280px;
      text-align: center;
    }
    
    .col-cust {
      width: 100%;
      padding-left: 2em;
      padding-right: 2em;
    }
  }

  @media (min-width: 768px) {
    .grow { transition: all .2s ease-in-out; }
    .grow:hover { transform: scale(1.1); }
    
    .item {
      height: 300px;
    }
    
    .col-cust {
      width: 25%;
    }
  }
  
  .title {
    color: #363636;
    padding-top: 5px;
  }
  
  .title:hover {
    text-decoration: none;
  }
  
  .thumbnail {
    border-style: none;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.3);
    cursor: pointer;
  }
  
  .thumbnail:hover {
    text-decoration: none;
  }
</style>
<div class="container">

<%if @search_games != nil%>
    <% @search_games.each do |game| %>
    <%if !game.active%>
      <div class="item col-xs-3 col-lg-3 col-cust grid-group-item">
      <%= link_to game do %>
        <div class="thumbnail grow">
        <div class="title"><%= "#{game.title}" %></div>
        <%=image_tag("drawing_placeholder.png")%>
        <div class="caption"> 
      <% end %>
       <% end %>
      </div>
      </div>
      </div>
    <%end%>
<%end%>
<%if @search_games.size == 0 %>
   <h3 style="margin-left: 0px; padding-top: 10px; padding-bottom: 10px">Hmm, we couldn't find any games for that query.</h3>
<%end%>
</div>

